<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature of Step"
        android:id="@+id/tempStepLabel"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length of Step"
        android:id="@+id/lengthStepLabel"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/tempStepLabel"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lengthMashText"
        android:layout_below="@+id/lengthStepLabel"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:width="100dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/tempMashEditText"
        android:layout_below="@+id/tempStepLabel"
        android:layout_centerHorizontal="true"
        android:width="100dp"
        android:focusable="true"/>

</RelativeLayout>