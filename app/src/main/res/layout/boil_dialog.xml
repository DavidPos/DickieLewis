<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time of Addition"
        android:id="@+id/addTimeLabel"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addition information"
        android:id="@+id/addInfoLabel"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/addTimeLabel"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addInfoText"
        android:layout_below="@+id/addInfoLabel"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:width="250dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/timeOfAddEditText"
        android:layout_below="@+id/addTimeLabel"
        android:layout_centerHorizontal="true"
        android:width="100dp"/>

</RelativeLayout>